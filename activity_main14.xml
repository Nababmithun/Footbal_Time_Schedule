        <TextView
            android:padding="3dp"
            android:layout_gravity="center"
            android:textColor="#FF26F40F"
            android:textSize="26dp"
            android:text="Winners Match 62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="#FF0FA8F4"
            android:padding="3dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="Luzhniki Stadium, Moscow"
            android:layout_width="wrap_content"
