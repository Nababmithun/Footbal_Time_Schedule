<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".SplashActivity"
    android:orientation="vertical"
    android:background="@drawable/black">


    <TextView
        android:scaleY="2"
        android:textSize="35dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FF3CC217"
        android:text="Footbal World Cup 2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView

        android:scaleY="2"
        android:layout_gravity="center"
        android:textSize="35dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FF4F5B13"
        android:text="Time schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/imageView"
        android:src="@drawable/mithunn"
        android:layout_marginTop="0dp" />


<TextView
    android:textSize="25dp"
    android:text="Apps by Mithun Kumar Riju.GB"
    android:textColor="#FFD240FF"
    android:scaleY="2"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</LinearLayout>
